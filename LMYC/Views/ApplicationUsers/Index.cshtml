@model LMYC.Models.UserAndRolesHelper

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<h2>Users and Their roles</h2>
<table class="table">
    <tr>
        <th>
            Email
        </th>
        <th>
            User Name
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model.FirstTable)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.ActionLink("Add Role", "Edit", new { id = item.Id })
                |
                @Html.ActionLink("Remove Roles", "Remove", new { id = item.Id })
            </td>
        </tr>
    }
</table>
<table>
    <tr>
        <th>
            User
        </th>
        <th>
            Role
        </th>
    </tr>
    @foreach (var item in Model.SecondTable)
    {
        <tr>
            <td>
                @item.Key
            </td>
            <td>
                @item.Value
            </td>
        </tr>
    }
</table>
<br />
<h1>Roles</h1>
<table>
    <tr>
        <th>
            Role
        </th>
    </tr>
    @foreach (var item in Model.ThirdTable)
    {
        <tr>
            <td>
                @item.Name
            </td>
        </tr>
    }
</table>
@Html.ActionLink("Add Role", "Edit", "Account", null) | @Html.ActionLink("Remove Role", "Remove", "Account", null)